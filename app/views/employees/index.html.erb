<table>
  <tr>
    <th>Name</th>
    <th>Emp Code</th>
    <th>Dept</th>
    <th>Salary</th>
    <th colspan="3">Actions</th>
  </tr>
    <%- @employees.each do |e| %>
      <tr>
        <td><%= e.name %></td>
        <td><%= e.emp_code %></td>
        <td><%= e.dept %></td>
        <td><%= e.salary %></td>
        <td><%= link_to 'Edit', edit_employee_path(e) %></td>
        <td><%= link_to 'Show', employee_path(e) %></td>
        <td><%= link_to 'Delete', employee_path(e), :method => :delete, :confirm => "Are you sure?" %></td>
      </tr>
    <% end %>
</table>

<%= link_to "Create new employee", new_employee_url %>